# Supabase PostgreSQL Database Connection
# Get this from your Supabase project: Settings → Database → Connection string (URI)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxx.supabase.co:5432/postgres

# Server Configuration
PORT=3000
NODE_ENV=production

# Admin Credentials (Change these!)
# Default username: admin
# Default password: admin123
# IMPORTANT: Change password after first login!

# Session Secret (Generate a random string for production)
# Example: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=change-this-to-a-random-secret-string

# CORS Origins (comma-separated list, or * for all)
CORS_ORIGIN=*

# File Upload Settings
MAX_FILE_SIZE=5242880
# 5242880 bytes = 5MB

# Security
BCRYPT_ROUNDS=10

# Optional: External URLs
FACEBOOK_PAGE_URL=https://www.facebook.com/noviqueen.elegance
MESSENGER_LINK=https://m.me/noviqueen.elegance
